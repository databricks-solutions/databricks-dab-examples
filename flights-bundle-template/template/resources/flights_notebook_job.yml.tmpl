# The main job for {{.project_name}}.
resources:
  jobs:
    flights_notebook:
      name: {{.project_name}}_job_${bundle.target}

      tasks:
        - task_key: notebook_task
{{if not .serverless_jobs}}
          job_cluster_key: job_cluster
{{end}}
          notebook_task:
            notebook_path: ../src/flights_main_notebook.py
            base_parameters:
                catalog: ${var.catalog}
                database: ${var.database}
{{if .serverless_jobs}}
{{if .generate_wheels}}
            environment_key: flights
{{end}}
          max_retries: 0

{{if .generate_wheels}}
      environments:
        - environment_key: flights
          spec:
            client: "1"
            dependencies:
              - ../dist/*.whl
{{end}}
{{else}}
          libraries:
            - pypi: 
                package: pytest
{{if .generate_wheels}}
            - whl: ../dist/*.whl
{{end}}
          max_retries: 0
{{end}}

{{if not .serverless_jobs}}
      job_clusters:
        - job_cluster_key: job_cluster
          new_cluster:
            spark_version: 15.4.x-scala2.12
            node_type_id: ${var.node_type_id}
            data_security_mode: USER_ISOLATION
            autoscale:
                min_workers: 1
                max_workers: 2
{{end}}
